<Window x:Class="CalcGains.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcGains"
        xmlns:vm="clr-namespace:CalcGains.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow">
    <Window.Resources>
        <vm:MainWindowViewModel x:Key="vm"/>
    </Window.Resources>
    <Grid
        DataContext="{StaticResource vm}">
        <Grid 
            x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="500"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button
                Grid.Column="0"
                Grid.Row="1"
                Content="Dodaj produkt"
                Name="AddProductButton"
                Command="{Binding command1}"/>
            <Button
                Grid.Column="1"
                Grid.Row="1"
                Content="Dodaj posiłek"
                Name="AddMealButton"/>
            <Button
                Grid.Column="2"
                Grid.Row="1"
                Content="Oblicz zapotrzebowanie"
                Name="CalculateDietButton"/>
        </Grid>
        <Grid
            x:Name="AddProductGrid"
            Width="500"
            Height="100"
            Background="Red"
            Visibility="{Binding Vis, Mode=TwoWay}">
            
        </Grid>
    </Grid>
</Window>
